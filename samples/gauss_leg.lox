/* lox script that computes the integral of a function 
using gauss legendre quadrature*/
var legendre_nodes=[-0.9879925180204854284896,-0.9372733924007059043078,-0.8482065834104272162007,
																		-0.7244177313601700474162,-0.5709721726085388475372,-0.394151347077563369897,
																		-0.2011940939974345223006,0,0.2011940939974345223006,
																		0.394151347077563369897,0.5709721726085388475372,0.7244177313601700474162,
																		0.8482065834104272162007,0.9372733924007059043078,0.9879925180204854284896];
var legendre_weights=[0.03075324199611726835463,0.0703660474881081247093,0.107159220467171935012,
0.1395706779261543144478,0.1662692058169939335532,0.186161000015562211027,																			0.198431485327111576456,0.2025782419255612728806,0.198431485327111576456,
0.1861610000155622110268,0.1662692058169939335532,0.1395706779261543144478,
0.1071592204671719350119,0.070366047488108124709,0.0307532419961172683546];
fun funct(x){
	return sin(x+cos(x));
}
prec(22);
print "*****Integrating by Gauss-Legendre Method*******";
print "Function:sin(x+cos(x))";
print "Enter the upper value:";
var b=input();
print "Enter the lower bound";
var a=input();
var c1=(b-a)*0.5;
var c2=0.5*(b+a);
var sum=0;
for(var j=0;j<15;++j){
	sum=sum+(legendre_weights[j]*funct((c1*legendre_nodes[j])+c2));
}
var integral=(c1*sum);
print "The integral is:"+integral;
